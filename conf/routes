# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                               Start.index

GET    /signup                                                          Accounts.signup
GET    /login                                                           Accounts.login
POST   /register                                                        Accounts.register
POST   /authenticate                                                    Accounts.authenticate
GET    /logout                                                          Accounts.logout

GET     /dashboard                                                      Dashboard.index
GET     /dashboard/deletestation/{id}                                   Dashboard.deleteStation
POST    /dashboard/addstation                                           Dashboard.addStation

GET     /about                                                          About.index
GET     /admin                                                          Admin.index
GET     /station/{id}                                                   StationCtrl.index
GET     /station/{id}/deletereading/{readingid}                         StationCtrl.deleteReading
POST    /station/{id}/addreading                                        StationCtrl.addReading
POST    /station/{id}/windSpeedToBeaufort                               StationCtrl.windSpeedToBeaufort
POST    /station/{id}/beaufortToBeaufortLabel                           StationCtrl.beaufortToBeaufortLabel
POST    /station/{id}/degreesToWindDirection                            StationCtrl.degreesToWindDirection

# Ignore favicon requests
GET     /favicon.ico                                                    404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                                        staticDir:public

# Catch all
*       /{controller}/{action}                                          {controller}.{action}
